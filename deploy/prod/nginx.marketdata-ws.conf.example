# Example Nginx edge config for public marketdata websocket.
#
# Goals:
# - TLS termination at edge
# - connection count limit per IP
# - request rate limit per IP
#
# Notes:
# - Keep this behind your own cert automation and WAF/ACL.
# - Tune limits based on real client behavior and capacity tests.

map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

limit_conn_zone $binary_remote_addr zone=mdws_conn:10m;
limit_req_zone $binary_remote_addr zone=mdws_req:10m rate=20r/s;

upstream exchange_marketdata_ws {
  server marketdata:8094;
  keepalive 64;
}

server {
  listen 443 ssl http2;
  server_name mdws.example.com;

  ssl_certificate     /etc/nginx/tls/fullchain.pem;
  ssl_certificate_key /etc/nginx/tls/privkey.pem;

  location /ws/public {
    # Edge abuse controls.
    limit_conn mdws_conn 20;
    limit_req zone=mdws_req burst=40 nodelay;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_read_timeout 65s;
    proxy_send_timeout 65s;
    proxy_pass http://exchange_marketdata_ws;
  }
}
